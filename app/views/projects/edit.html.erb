<h1><%= t('.title') %></h1>
<% if check_user %>
  <%= render 'errors' %>
  <%= form_for @project, html: { multipart: true} do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :theme %>
      <%= f.text_field :theme, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :all_tags %>
      <%= f.text_field :all_tags, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.trix_editor :description, class: 'editor' %>
    </div>

    <div class="form-group">
      <%= f.label :video %>
      <%= f.text_field :video, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :money %>
      <%= f.text_field :money, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :fon_image %>
      <%= f.file_field :image, class: 'fon-image' %>
    </div>

    <div class="form-group">
      <%= f.submit t('.submit'), class: 'btn btn-primary' %>
      <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary' %>
    </div>
  <% end %>
<% else %>
  <div class="form-group">
  <h4><%= t('.not_author') %></h4>
  <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>