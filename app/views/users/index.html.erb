<h1><%= t('.title') %></h1>

<div class="buttons_panel">
  <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary' %>
</div>

<section id="users">
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th><%= t('.mail') %></th>
      <th><%= t('.admin') %></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? '+' : '-' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>