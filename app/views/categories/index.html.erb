<h1><%= t('.title') %></h1>

<div class="buttons_panel">
  <%= link_to t('.new'), new_category_path, class: 'btn btn-new-categories btn-outline-secondary' %>
  <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary' %>
</div>

<section id="categories">
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th><%= t('.name') %></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each_with_index do |category, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= category.name %></td>
        <td>
          <%= link_to t('.edit'), edit_category_path(category), class: 'btn-new-categories btn btn-outline-primary btn-sm'  %>
          <%= link_to t('.delete'), category_path(category), method: :delete, data: { confirm: t('.are_you_sure') }, class: 'btn-categories btn btn-outline-danger btn-sm'  %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>